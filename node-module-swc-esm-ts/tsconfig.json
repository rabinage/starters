{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "emitDeclarationOnly": true,
    "declaration": true,
    "baseUrl": "./",
    "paths": {},
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outFile": "typings.d.ts"
  },
  "exclude": ["**/node_modules/**/*", "dist/**/*"],
  "include": ["src/**/*"]
}
